<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_cima_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Cabecera: logo + título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/widget_cima_logo_block" />

        <TextView
            android:id="@+id/cima_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/cima_widget_title"
            android:textColor="@color/cima_widget_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Línea verde separadora -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/widget_cima_line" />

    <!-- Inicio de sesión rápido (botón/área) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/widget_cima_quick_btn"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/cima_widget_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cima_widget_subtitle"
            android:textColor="@color/cima_widget_text"
            android:textSize="12sp" />
    </FrameLayout>

    <!-- Espaciador -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Icono WiFi centrado abajo -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/cima_widget_wifi_description"
            android:src="@drawable/ic_wifi_tethering" />
    </FrameLayout>

</LinearLayout>
